  <body>
    <%- include('partials/_header') %>
    <h1>New Listing</h1>
    <form action="new" method="post">
      <label for="listing_type">I am a: </label>
      <select id="listing_type">
        <option value="DONOR">DONOR</option>
        <option value="SEEKER">SEEKER</option>
      </select>
      <br>
      <label for="Resourse">Resource</label>
      <select name="resource" id="resource">
        <% for (let resource of data){ %>
          
          <option value="<%= resource.id %>"><%= resource.name %></option>
        <%}%>
      </select><br>

      <label for="quantity">Quantity</label>
      <input type="number" id="quantity" >
      <br>

      <label for="Oxygen Level">Oxygen Level</label>
      <input type="number" id="oxygen_level" placeholder="Optional"> 
      <br>

<input type="hidden" id="allstates" value='<%= JSON.stringify(states) %>'>
      <label for="State">State</label>
      <select name="State" id="state">
        <% for (let state in states){ %>
          
          <option value="<%= state %>"><%= state %></option>
        <%}%>
      </select><br>


      <label for="City">City</label>
      <select name="City" id="city">
      </select><br>

      <label for="Area">Area</label>
      <input type="text" id="area">
      <br>


      <button type="submit">submit</button>
    </form>
  </body>
